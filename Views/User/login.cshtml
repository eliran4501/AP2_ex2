<div id="greenBG">
    <form asp-action="ChatScreen">
    <div class="rounded-3 border border-3 position-absolute top-50 start-50 translate-middle loginBOX">
        <div class="input-group-sm mb-3">
            <label for="loginUserInput" class="form-label form-control-sm">User Name</label>
            <input name="username" type="text" class="form-control" id="loginUserInput" placeholder="Enter username here">
        </div>
        <div class="input-group-sm mb-3">
            <label for="loginPasswordInput" class="form-label form-control-sm">Password</label>
            <input name="password" type="password" class="form-control" id="loginPasswordInput" placeholder="Enter password here">
        </div>
        <div class="LoginButton input-group-sm col-sm-6">
            <button onclick="loginUser()" class="btn btn-primary" type="submit">Login</button>
        </div>
        <div class="input-group-sm col-sm-6 LoginText">Not registered?<a asp-action="Create">Click here</a> to register</div>
    </div>
    </form>
</div>

